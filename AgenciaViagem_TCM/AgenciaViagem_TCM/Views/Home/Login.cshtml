@model AgenciaViagem_TCM.Models.Login

@{
    ViewBag.Title = "Login";
}

<br />
<hr />

<center>
    <div id="divTelaCheia">
        <div class="row">
            <div class="col-lg-12">
                <img src="~/Imagens/logo_AgenciaViagens.png" />
            </div>
        </div>
        @using (Html.BeginForm("ValidarLogin", "Home", null, FormMethod.Post))
        {

            <div class="row">
                <div>
                    <br />
                    <p class="glyphicon glyphicon-user"> USUÁRIO</p>
                </div>
                <div class="col-4">
                    @Html.TextBoxFor(model => Model.Usuario, new { Class = "glyphicon glyphicon-user" })
                </div>
            </div>

            <br />
            <div class="row">
                <div>
                    <p class="glyphicon glyphicon-lock"> SENHA</p>
                </div>
                <div class="col-4">
                    @Html.PasswordFor(model => Model.Senha, new { Class = "glyphicon glyphicon-user" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="glyphicon glyphicon-log-in alert-info col-4">

                    <input type="submit" value="ENTRAR" id="botaoEntrar" />
                </div>
            </div>

        }
    </div>
</center>


<script type="text/javascript">

    var teste = document.URL.toString().indexOf("false")
    
    if (teste != -1)
    {
        window.alert("Login ou senha incorreto.");
    }

</script>