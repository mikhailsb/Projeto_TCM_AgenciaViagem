@model IEnumerable<AppClasses.Funcionario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogado.cshtml";
}

<h2>Funcionários</h2>

@Html.ActionLink("Cadastrar", "CadastrarFunc", "Funcionario")
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdFuncionario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeFuncioario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cargo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdFuncionario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeFuncioario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new {IDFunc=item.IdFuncionario}) |
                @Html.ActionLink("Delete", "Delete", new {IDFunc=item.IdFuncionario})
            </td>
        </tr>
    }

</table>
